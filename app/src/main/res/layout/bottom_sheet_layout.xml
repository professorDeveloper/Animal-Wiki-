<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/sheet_bg"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Choose font size"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <RadioButton
            android:id="@+id/f18"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="16 Font"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioButton

            android:id="@+id/f22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 Font"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/f25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Font"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/f30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 Font"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/f35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 Font"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/dialog_bg"
        android:id="@+id/save_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/color_main"
        android:text="Save"
        app:background="?selectableItemBackground" />

</LinearLayout>